<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.subject_code %></td>
        <td><%= link_to 'Show', subject, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path, class: "btn btn-success" %>
