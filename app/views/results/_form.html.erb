<%= form_with(model: result, local: true) do |form| %>
  <% if result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :score %>
    <%= form.text_field :score, id: :result_score %>
  </div>

  <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Select Student</label>
      <div class="col-lg-10">
        <select class="form-control" id="select" <%= form.select :student_id, options_for_select(@students.map{|s| [s.student_name,s.id]}) %>
  </div>

  <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Select Subject</label>
      <div class="col-lg-10">
        <select class="form-control" id="select" <%= form.select :subject_id, options_for_select(@subjects.map{|sub| [sub.subject_name,sub.id]}) %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
